<html>
	<head>
		<title>Invoive Central</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="./views/assets/css/main.css" />
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<noscript><link rel="stylesheet" href="./views/assets/css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">

		<!-- Wrapper-->
			<div id="wrapper">

				<!-- Nav -->
					<nav id="nav">
						<a href="#" class="icon solid fa-home"><span>Home</span></a>
						<a href="#invoices" class="icon solid fa-envelope"><span>Invoices</span></a>
						<a href="#shop" class="icon solid fa-folder"><span>Shop</span></a>
					</nav>

				<!-- Main -->
					<%  if(Object.keys(user).length){ %>
					<div id="main">

						<!-- Me -->
							<article id="home" class="panel intro">
								<header>
									<h1><%- user.name %></h1>
									<p id="uid" data-uid="<%- user.username %>"><%- user.username %></p>
									<p><%- user.email %></p>
									<p><%- user.mobile %></p>
								</header>
								
								<a href="#invoices" class="jumplink pic">
									<span class="arrow icon solid fa-chevron-right"><span>See my work</span></span>
									
								</a>
							</article>
							

						<!-- Invoices -->
						
							<article id="invoices" class="panel">
								<header>
									<h2>
									Invoices
									</h2>
								</header>
								<section>
									<%  if(client.length){ %>
								<table class="table">
										<thead class="thead-dark">
										  <tr>
											<th scope="col">Sr.</th>
											<th scope="col">Receipt No.</th>
											<th scope="col">Shop</th>
											<th scope="col">Link</th>
										  </tr>
										</thead>
										<tbody>
										  <% client.forEach(function(x,i){ %>		
										  <tr>
											<th scope="row"><%- i+1 %></th>
											<td><%- x._id %></td>
											<td><%- x.shop %></td>
											<td>
												<a href="/invoice/<%- x._id %>" target='_blank'>Pdf Link</a>
											</td>
										  </tr>

										  <% }) %>
										</tbody>
									</table>
									<% } %>		
								</section>
							</article>
							
							
						<!-- shop -->
							<article id="shop" class="panel">
								<header>
									<h2><%- user.name %></h2>
								</header>
								<section data-shop="<%- user.shop %>">

								</section>
								<%  if(shop.length){ %>
								<table class="table">
										<thead class="thead-dark">
										  <tr>
											<th scope="col">Sr.</th>
											<th scope="col">Receipt No.</th>
											<th scope="col">Client</th>
											<th scope="col">Link</th>
										  </tr>
										</thead>
										<tbody>
										  <% shop.forEach(function(x,i){ %>		
										  <tr>
											<th scope="row"><%- i+1 %></th>
											<td><%- x._id %></td>
											<% if(x.client[0].type == "local"){ %>
											<td><%- x.client[0].name %></td>
											<% }else{ %>
											<td><%- x.client[0].username %></td>
											<% } %>
											<td>
												<a href="/invoice/<%- x._id %>" target='_blank'>Pdf Link</a>
											</td>
										  </tr>

										  <% }) %>
										</tbody>
									</table>
									<% } %>
							</article>
								
					</div>
					<% } %>

			</div>

		<!-- Scripts -->
			<script src="./views/assets/js/jquery.min.js"></script>
			<script src="./views/assets/js/browser.min.js"></script>
			<script src="./views/assets/js/breakpoints.min.js"></script>
			<script src="./views/assets/js/util.js"></script>
			<script src="./views/assets/js/main.js"></script>
			<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
			<script src="./views/js/dashboard.js"></script>
	</body>
</html>